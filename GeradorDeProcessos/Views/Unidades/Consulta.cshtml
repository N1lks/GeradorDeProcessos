@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<GeradorDeProcessos.Models.Unidades>
@*@model IEnumerable<GeradorDeProcessos.Models.Unidades>*@

@{
	ViewBag.Title = "Procex";
}

<h3>Consulta de unidades</h3>

<div class="well well-sm form-inline">
	@using (Html.BeginForm("Consulta", "Unidades", new { id = ViewBag.IdEmpreendimento }))
	{
		<div class="form-group">
			<div class="col-lg-12">
				<div class="input-group">
					<input type="text" name="searchString" class="form-control" placeholder="buscar...">
					<span class="input-group-btn">
						<button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
					</span>
				</div>
			</div>
		</div>
	}
</div>
<table class="table table-responsive">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.First().Numero)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.First().UnidadeStatus)
		</th>
		<th>
			@*@Html.DisplayNameFor(model => model.First().Empreendimentos.Nome)*@
		</th>
		<th></th>
	</tr>
	@if (Model.Count != 0)
	{
		foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Numero)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnidadeStatus)
				</td>
				<td>
					@*@Html.DisplayFor(modelItem => item.Empreendimentos.Nome)*@
				</td>
				<td>
					<div class="btn-toolbar">
							<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="asd" data-original-title="Tooltip on top" onclick="location.href='@Url.Action("Edit","Edit")'">teste</button>
							<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="asd" data-original-title="Tooltip on top" onclick="location.href='@Url.Action("Edit","Edit")'">teste</button>
							<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="asd" data-original-title="Tooltip on top" onclick="location.href='@Url.Action("Edit","Edit")'">teste</button>
							<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="asd" data-original-title="Tooltip on top" onclick="location.href='@Url.Action("Edit","Edit")'">teste</button>
					</div>
				</td>
			</tr>
		}

	}
	else
	{
		<tr><td colspan="4" class="text-primary">Nenhuma unidade encontrada <b>:(</b></td></tr>
	}
	<tfoot>
		<tr>
			<td colspan="4">
				@*Page @( Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
				@Html.PagedListPager(Model, page => Url.Action("Consulta", new { id = Model.First().IDEmpreendimento, page, currentFilter = ViewBag.CurrentFilter }))
			</td>
		</tr>
	</tfoot>



</table>
@section scripts{
	<script>
		$(function () {
			$('[data-toggle="tooltip"]').tooltip()
		})
	</script>
}
