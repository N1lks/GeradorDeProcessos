@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" />
	<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
	<title>@ViewBag.Title</title>
	<style>
		body {
			padding-top: 60px;
		}
	</style>
</head>
<body>

	<form style="width:400px; padding: 10px; margin:auto" class="panel panel-default" id="form-login" name="form-login" method="post" action="javascript:function()">

		<h2>Login</h2>
		<div class="form-group">
			<label for="txtLogin">Email</label>
			<input type="email" class="form-control" id="txtLogin" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="txtSenha">Senha</label>
			<input type="password" class="form-control" id="txtSenha" placeholder="Senha">
		</div>
		<div>
			<div id="status" class="alert alert-info"></div>
		</div>
		<a id="btnLogar" class="btn btn-default">Entrar</a>
	</form>

	<script src="@Url.Content("~/Scripts/jquery-3.1.0.min.js")"></script>
	<script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
	<script src="@Url.Content("~/Scripts/Login.Home.js")"></script>
</body>
</html>
