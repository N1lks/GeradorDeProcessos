@model GeradorDeProcessos.Models.Empreendimentos

@{
    ViewBag.Title = "Delete";
}

<h2>Administração</h2>


<div>
    <h4>Remover - @ViewBag.Empreendimento</h4>
    <hr />

	<h4>Tem certeza que deseja remover este empreendimento?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.Label("Empresa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresas.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> 
            @Html.ActionLink("Voltar", "Gerenciar", new { id = Model.IDEmpreendimento }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
        </div>
    }
</div>
