@model GeradorDeProcessos.Models.Empreendimentos

@{
	ViewBag.Title = "Delete";
}

<div>
    <h4>Deletar</h4>
    <hr />

	<h3>Tem certeza que deseja deletar o empreendimento @ViewBag.Empreendimento</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empresas.Nome)
        </dt>

		<dd>
			@Html.DisplayFor(model => model.Empresas.Nome)
		</dd>

		<dt>
			@Html.Label("Total de unidades")
		</dt>

		<dd>
			@Html.Action("QtdUnidades", "Empreendimentos", new { id = Model.IDEmpreendimento })
		</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
            @Html.ActionLink("Voltar", "Index", "Home", new {@class="btn btn-default"})
        </div>
    }
</div>
