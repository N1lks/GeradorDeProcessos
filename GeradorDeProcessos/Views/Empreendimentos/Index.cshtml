@model IEnumerable<GeradorDeProcessos.Models.Empreendimentos>

@{
    ViewBag.Title = "Empreendmentos";
}

<h2>Administração</h2>

<h4>Empreendimentos</h4>

<p>
    @Html.ActionLink("Novo empreendimento", "Create", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Empreendimento")
        </th>
        <th>
            @Html.Label("Empresa")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresas.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDEmpreendimento }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDEmpreendimento }, new { @class = "btn btn-primary btn-sm" }) |
			
			@Html.ActionLink("Listar Unidades", "ListarUnidades", "Unidades", new { EmpreendimentoID = item.IDEmpreendimento }, new { @class = "btn btn-primary btn-sm" }) |

			@Html.ActionLink("Adicionar unidades", "Create", "Unidades", new { id = item.IDEmpreendimento }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.IDEmpreendimento }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
