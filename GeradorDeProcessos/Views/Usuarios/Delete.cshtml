@model GeradorDeProcessos.Models.Usuarios

@{
    ViewBag.Title = "Delete";
}

<h3>Deletar usuário</h3>


<div>
    <hr />
	<h4>Tem certeza que deseja deletar este usuário?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoUsuario)
        </dt>

        <dd>
            @Html.Raw(ViewBag.TipoUsuario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empresas.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresas.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
