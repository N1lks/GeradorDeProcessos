</div>
@section scripts
{
	<script>
		jQuery(function ($) {
			$("#DataNascimento").mask("99/99/9999")
			$("#CpfCnpj").mask("999.999.999-99")
			if ($("#TipoPessoa").val() === "0")
			{
				$("#Registro").text("CPF")
				$("#CpfCnpj").mask("999.999.999-99")
				$("#Sexo").show()
				$("#Profissao").show()
				$("#DataNascimento").show()
				$("#EstadoCivil").show()
				$("#RegimeCasamento").show()
				$("#Conjuge_Cpf").show()
				$("#Conjuge_Nome").show()
			} else {
				$("#Registro").text("CNPJ")
				$("#Sexo").hide()
				$("#Profissao").hide()
				$("#DataNascimento").hide()
				$("#EstadoCivil").hide()
				$("#RegimeCasamento").hide()
				$("#Conjuge_Cpf").hide()
				$("#Conjuge_Nome").hide()
			}
		});
		$('#TipoPessoa').change(function () {
			if ($("#TipoPessoa").val() === "0") {
				$("#Registro").text("CPF")
				$("#CpfCnpj").mask("999.999.999-99")
				$("#Sexo").show()
				$("#Profissao").show()
				$("#DataNascimento").show()
				$("#EstadoCivil").show()
				$("#RegimeCasamento").show()
				$("#Conjuge_Cpf").show()
				$("#Conjuge_Nome").show()
			} else {
				$("#CpfCnpj").mask("99.999.999/9999-99")
				$("#Registro").text("CNPJ")
				$("#Sexo").hide()
				$("#Profissao").hide()
				$("#DataNascimento").hide()
				$("#EstadoCivil").hide()
				$("#RegimeCasamento").hide()
				$("#Conjuge_Cpf").hide()
				$("#Conjuge_Nome").hide()
			}
		});
	</script>
}
